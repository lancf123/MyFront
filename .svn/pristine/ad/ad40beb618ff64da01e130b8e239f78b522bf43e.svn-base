        <div class="weui_cell_hd">
            <label class="weui_label">和包账户</label>
        </div>
        <div class="weui_cell_bd weui_cell_primary">
            <input id="user_mobile_id" class="weui_input" type="tel" maxlength="11" pattern="[0-11]*" placeholder="请输入11位手机号码" />
