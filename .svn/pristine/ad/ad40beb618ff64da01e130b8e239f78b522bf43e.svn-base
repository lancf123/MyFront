    <div class="weui_cell">
        <div class="weui_cell_hd">
            <label class="weui_label">短信验证码</label>
        </div>
        <div class="weui_cell_bd weui_cell_primary">
            <input id="smeg" class="weui_input" type="tel" maxlength="6" placeholder="" />
